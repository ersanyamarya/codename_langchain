{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@codename-langchain/config": ["libs/config/src/index.ts"],
      "@codename-langchain/mongo": ["libs/mongo/src/index.ts"],
      "@ersanyamarya/langchain-addons": ["libs/langchain-addons/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
